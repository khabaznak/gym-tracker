<header class="border-b border-graphite/20 bg-graphite text-white shadow-md dark:border-ink dark:bg-ink dark:text-fog">
  <div class="mx-auto flex max-w-5xl items-center justify-between px-6 py-4">
    <div>
      <h1 class="text-2xl font-bold tracking-tight text-white dark:text-fog">{{title}}</h1>
      {{#if subtitle}}
        <p class="mt-1 text-sm text-white/70 dark:text-fog/70">{{subtitle}}</p>
      {{/if}}
    </div>
    {{#if actions}}
      <div class="flex items-center gap-3">
        {{{actions}}}
      </div>
    {{/if}}
  </div>
</header>
